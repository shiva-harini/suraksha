{
  "name": "Disaster Management App",
  "short_name": "DisasterManager",
  "description": "Mobile emergency response and disaster management application",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#1e293b",
  "background_color": "#0f172a",
  "scope": "/",
  "lang": "en-US",
  "categories": ["utilities", "lifestyle", "safety"],
