{
  "name": "disaster-management-mobile-app",
  "version": "1.0.0",
  "description": "Mobile-first disaster management and emergency response app",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "build": "npm run copy-assets",
