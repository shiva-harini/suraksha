  "screenshots": [
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "mobile",
      "label": "Emergency SOS Screen"
    },
    {
      "src": "/screenshots/mobile-2.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "mobile",
      "label": "Safe Locations with Map"
    },
    {
      "src": "/screenshots/mobile-3.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "mobile",
      "label": "Alert Dashboard"
    }
  ],
  "shortcuts": [
    {
      "name": "Send SOS",
      "short_name": "SOS",
      "description": "Send emergency SOS alert",
      "url": "/?action=sos",
      "icons": [
        {
          "src": "/icons/sos-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Emergency Contacts",
      "short_name": "Contacts",
      "description": "Quick access to emergency contacts",
      "url": "/?tab=contacts",
      "icons": [
        {
          "src": "/icons/contacts-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Safe Locations",
      "short_name": "Locations",
      "description": "Find nearby safe locations",
      "url": "/?tab=locations",
      "icons": [
        {
          "src": "/icons/location-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Safety Guide",
      "short_name": "Guide",
      "description": "Emergency safety precautions",
      "url": "/?tab=precautions",
      "icons": [
        {
          "src": "/icons/guide-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+disaster",
      "url": "/?alert=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ]
}
